# =============================================================================
# ShopSense AI - Environment Configuration
# =============================================================================
# IMPORTANT: This file contains sensitive credentials
# - NEVER commit this file to version control
# - Copy from .env.example and fill in your values
# - Keep production credentials separate from development
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS

# -----------------------------------------------------------------------------
# Database Configuration (MongoDB)
# -----------------------------------------------------------------------------
# Development (Local)
# MONGO_URI=mongodb://localhost:27017/shopsense_analytics

# Production (MongoDB Atlas) - Replace with your connection string
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/shopsense_analytics

# -----------------------------------------------------------------------------
# Google Gemini AI Configuration
# -----------------------------------------------------------------------------
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSyArLuHKOQQSR-itODxWFDfisA3kJ2Pvwpw

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_STRING_MIN_32_CHARS
JWT_ACCESS_TOKEN_EXPIRES=900
JWT_REFRESH_TOKEN_EXPIRES=604800

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Rate Limiting
RATE_LIMIT_DEFAULT=100 per minute
RATE_LIMIT_AUTH=5 per minute
RATE_LIMIT_UPLOAD=10 per hour

# Session Settings
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# -----------------------------------------------------------------------------
# File Upload Settings
# -----------------------------------------------------------------------------
UPLOAD_FOLDER=./uploads
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=csv

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=./logs/shopsense.log

# -----------------------------------------------------------------------------
# Production Settings (Override in production environment)
# -----------------------------------------------------------------------------
# In production, set these via your hosting provider's environment variables
# FLASK_ENV=production
# FLASK_DEBUG=False
# SESSION_COOKIE_SECURE=True
# CORS_ORIGINS=https://yourdomain.com
